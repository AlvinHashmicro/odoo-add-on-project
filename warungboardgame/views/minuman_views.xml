<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- warung.minuman tree view -->
    <record id="warung_minuman_view_tree" model="ir.ui.view">
        <field name="name">Minuman</field>
        <field name="model">warung.minuman</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="name" />
                <field name="deskripsi" />
                <field name="harga" />
            </tree>
        </field>
    </record>

    <!-- warung.minuman form view -->
    <record id="model_name_view_form" model="ir.ui.view">
        <field name="name">Form Minuman</field>
        <field name="model">warung.minuman</field>
        <field name="arch" type="xml">
            <form string="Daftar Minuman">
                <sheet>
                    <group>
                        <!-- Add your fields here -->
                        <field name="name" />
                        <field name="harga" />
                    </group>

                    <group>
                        <field name="deskripsi" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- warung.minuman action window -->
    <record id="warung_minuman_action" model="ir.actions.act_window">
        <field name="name">Minuman</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">warung.minuman</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- This Menu Item must have a parent and an action -->
    <menuitem
        id="warung_minuman_menu_act"
        name="Minuman"
        parent="warung_fnb_menu_categ"
        action="warung_minuman_action"
        sequence="30"/>
</odoo>